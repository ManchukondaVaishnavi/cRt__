import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int i=1,sum=0,p=0;
        while(i<=n){
           sum=sum*10+2;
            p+=sum;
            i++;
        }
        System.out.print(p);
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
