#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
char s[100];
    scanf("%s",s);
    for(int i=0;i<strlen(s);i++){
        if(i%2==0){
            printf("%d %c\n",i,s[i]);
        }
    }
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
