#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int n;
    scanf("%d",&n);
    for(int i=0;i<n;i++) {
            
            for(int j=0;j<n;j++) {
                
                if(i==0||j==n-1||j==i) {
                    printf("* ");
                } else{
                   printf("  ");
                }
            }
           printf("\n");
        }
    return 0;
    }
